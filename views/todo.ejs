<!DOCTYPE html>

<html>

    <head>
        <title>DevOps Presentation</title>
        <style>
            a {
                text-decoration: none;
                color: red;
            }
        </style>
    </head>

    <body>
<h1> Hi Everyone</h1>
        <h1> Presentation Begins.. Now.... <br>Ready...</h1>
        <ul>
            <% todolist.forEach(function(todo, index) { %>
            <li>
                <a href="/todo/delete/<%= index %>">✘</a>
                <a href="/todo/<%= index %>">✎</a>
                <%- todo %>
            </li>
            <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <p>
                <label for="newtodo">Share your views on the presentation</label>
                <input type="text" name="newtodo" id="newtodo" autofocus />
                <input type="submit" value="Add" />
            </p>
        </form>
    </body>

</html>
